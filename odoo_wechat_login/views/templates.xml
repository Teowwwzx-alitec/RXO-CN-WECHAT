<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 错误页面模板 -->
    <template id="error_template" name="Error Page">
        <t t-call="web.layout">
            <div class="container mt-5">
                <h1 class="text-danger">错误</h1>
                <p t-esc="error_message"/>
            </div>
        </t>
    </template>

    <!-- 表单页面模板 -->
    <template id="form_template" name="WeChat Form">
        <t t-call="web.layout">
            <div class="container mt-5">
                <h1>用户信息</h1>
                <p>OpenID: <span t-esc="user.get('openid', '')"/></p>
                <p>昵称: <span t-esc="user.get('nickname', '')"/></p>
                <!-- 其他字段 -->
                <form method="post">
                    <input type="hidden" name="token" t-att-value="token"/>
                    <input type="hidden" name="lang" t-att-value="lang"/>
                    <!-- 表单内容 -->
                </form>
            </div>
        </t>
    </template>
</odoo>
